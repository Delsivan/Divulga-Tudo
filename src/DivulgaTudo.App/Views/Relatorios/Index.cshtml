@model IEnumerable<DivulgaTudo.App.ViewModels.RelatorioViewModel>


<form class="form-inline mb-3 mt-5">
    <select class="form-control mr-2" asp-items="ViewBag.ClienteId" name="clienteId"></select>
    <div class="form-group mr-2">
        <input type="date" class="form-control" name="dataInicio" placeholder="Data Inicio" />
    </div>
    <div class="form-group mr-2">
        <input type="date" class="form-control" name="dataFim" placeholder="Data Fim" />
    </div>
    <button type="submit" class="btn btn-primary">Filtar</button>
</form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TituloAnuncio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorInvestido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxVisualizacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxClique)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxCompartilhamento)
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model?.Count() > 0)
                {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TituloAnuncio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ValorInvestido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxVisualizacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxClique)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MaxCompartilhamento)
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>